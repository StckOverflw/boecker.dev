---
import Layout from "../layouts/Layout.astro";
import PageContent from "../layouts/PageContent.astro";

import projects from "../data/projects.json";
import { Sprite } from "astro-icon";
---

<Layout title="Projects & Work">
  <PageContent
    title="Projects & Work"
    description="Skills I have & some of the projects I've done in the past"
  >
    <div class="mb-12 text-lg" id="text">
      <p>
        My provicency in Full-Stack Development with Languages like Typescript,
        Rust and Kotlin allow me to build anything from a simple website to a
        complex web application.
      </p>
      <p>Here you can find some of my current projects</p>
    </div>
    <div
      class="grid grid-rows-3 md:grid-rows-2 xl:grid-rows-1 grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-12 md:gap-8 xl:gap-6"
    >
      {
        projects.map((project) => (
          <article class="relative bg-neutral-800 rounded-xl flex flex-col">
            <img
              src={project.image}
              class="rounded-t-xl"
              width="1920"
              height="1080"
            />
            <div class="flex flex-col p-3 h-full ">
              <div class="flex-grow">
                <div class="flex flex-row gap-2 text-neutral-400 uppercase text-sm">
                  {project.tags.map((tag) => (
                    <p>#{tag}</p>
                  ))}
                </div>
                <p class="text-lg">{project.name}</p>
                <p class="text-neutral-300">{project.description}</p>
              </div>
              <div class="flex flex-row gap-4 mt-1 bottom-0">
                {project.links?.map((link) => (
                  <a
                    class="flex flex-row items-center gap-1 text-violet-300"
                    target="_blank"
                    href={link.url}
                  >
                    <Sprite name="ci:external-link" size="20" />
                    {link.name}
                  </a>
                ))}
              </div>
            </div>
          </article>
        ))
      }
    </div>
    <div class="mt-12 text-xl animate-fadeInTop opacity-0" id="more-on-github">
      If you want to see more feel free to check out my <a
        class="text-violet-300"
        href="https://github.com/StckOverflw"
        target="_blank">Github</a
      >
    </div>
  </PageContent>
</Layout>

<style>
  article {
    @apply opacity-0 animate-fadeInTop;
    animation-fill-mode: forwards;
  }
  p {
    @apply opacity-0 animate-fadeInTop;
    animation-fill-mode: forwards;
  }
  #text p:nth-child(1) {
    animation-delay: 100ms;
  }
  #text p:nth-child(2) {
    animation-delay: 200ms;
  }
  article:nth-child(1) {
    animation-delay: 300ms;
  }
  article:nth-child(2) {
    animation-delay: 400ms;
  }
  article:nth-child(3) {
    animation-delay: 500ms;
  }
  #more-on-github {
    animation-fill-mode: forwards;
    animation-delay: 600ms;
  }
</style>
