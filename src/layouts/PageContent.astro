---
export type Props = {
  title: string;
  description: string;
};

const { title, description }: Props = Astro.props;
---

<div class="flex w-full justify-center my-20">
  <div class="flex flex-col gap-4 w-[90%] md:w-[760px] xl:w-[1200px]">
    <div class="flex flex-col py-12 mt-8 gap-3">
      <h1
        class="text-6xl animate-fadeInTop opacity-0"
        style="animation-fill-mode: forwards;"
      >
        {title}
      </h1>
      <h2
        class="text-gray-400 text-2xl animate-fadeInTop opacity-0"
        style="animation-fill-mode: forwards; animation-delay: 100ms;"
      >
        {description}
      </h2>
    </div>
    <div id="content">
      <slot />
    </div>
  </div>
</div>
