---
const { frontmatter } = Astro.props;
import Layout from "./Layout.astro";
---

<Layout title={frontmatter.title} description={frontmatter.description} type={"article"}>
  <div
    class="flex flex-col w-[90%] md:w-[760px] xl:w-[40%] justify-center mx-auto xl:mt-40 mt-28 md:mt-32"
  >
    <h1 class="text-5xl mx-auto text-center">{frontmatter.title}</h1>
    <p class="text-lg mx-auto text-gray-400 mt-2 text-center">
      {frontmatter.description}
    </p>
    <div
      class="my-12 md:my-16 xl:my-20 prose lg:prose-lg prose-neutral dark:prose-invert prose-a:text-violet-300 prose-h2:font-semibold"
    >
      <slot />
    </div>
  </div>
</Layout>
